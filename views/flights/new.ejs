<%- include('../partials/header') %>
    
<div>
    <form action="/flights" method="POST" class="form-horizontal" align="center">
        <label>Airline:
            <select name="airline">
                <option selected>Choose Airline</option>
                <option value="American">American</option>
                <option value="Southwest">Southwest</option>
                <option value="United">United</option>
            </select>
        </label><br><br>
        <label>Airport:
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN" selected>DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
            </select>
        </label><br><br>
        <label>Flight No:
            <input type="text" name="flightNo"> 
        </label><br><br>
        <label>Departs
            <input type="datetime-local" name="departs" value="<%= departsDate %>">
        </label><br><br>
        <button type="submit" class="btn btn-success">Add Flight</button>
    </form>
</div>

<%- include('../partials/footer') %>
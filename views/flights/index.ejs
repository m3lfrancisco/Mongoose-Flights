<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mongoose Flights</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar sticky-top navbar-light" style="background-color: #e3f2fd;">
        <div class="container-md">
            <a class="navbar-brand" href="/flights">ALL FLIGHTS</a>
            <a class="nav-link active" href="flights/new">ADD FLIGHT</a>
        </div>
    </nav>
    <h1 style="margin: 30px;">All Flights</h1>
    <table class="table table-info table-striped">
        <thead>
            <tr>
                <th scope="col">Airline</th>
                <th scope="col">Airport</th>
                <th scope="col">FLight No.</th>
                <th scope="col">Departure Date/Time</th>
            </tr>    
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= f.departs %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>        
</body>
</html>